{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-var": "error",
        "no-unused-vars": "error",
        "no-console":"warn",
        "prefer-const":"error",
        "prefer-rest-params":"error",
        "prefer-spread":"error",
        "semi": [
            "error",
            "always"
        ]
    }
}
